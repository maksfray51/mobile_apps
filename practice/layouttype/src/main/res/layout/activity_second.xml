<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="new life for mirea activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tr3"
        tools:layout_editor_absoluteX="1dp" />

    <TableRow
        android:id="@+id/tr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Вторая кнопка" />

        <Button
            android:id="@+id/button1"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Первая кнопка" />
    </TableRow>

    <TableRow
        android:id="@+id/tr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tr1"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Чётвертая кнопка" />

        <Button
            android:id="@+id/button3"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Третья кнопка" />
    </TableRow>

    <TableRow
        android:id="@+id/tr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tr2"
        tools:layout_editor_absoluteX="2dp">

        <Button
            android:id="@+id/button6"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Шестая кнопка" />

        <Button
            android:id="@+id/button5"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Пятая кнопка" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>