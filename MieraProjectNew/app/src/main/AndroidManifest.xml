        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCltnxpRmPTpNOlRNd5EYrQJLNx_rNLxyk" />

        <activity
            android:name=".AddNewUserDBActivity"
            android:exported="false" />
        <activity
            android:name=".FireBaseAuth"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MieraProjectNew.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="ru.mirea.poltavets.mieraprojectnew.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>



</manifest>